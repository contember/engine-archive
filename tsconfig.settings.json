{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"noEmitOnError": true,
		"experimentalDecorators": true,
		"emitDeclarationOnly": true,
		"target": "es2020",
		"moduleResolution": "node",
		"module": "ESNext",
		"isolatedModules": true,
		"esModuleInterop": true,
		"strict": true,
		"incremental": true,
		"lib": ["esnext", "DOM"]
	}
}
